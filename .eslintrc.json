// comentario
{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["plugin:react/recommended", "standard", "prettier"],
    "overrides": [
        {
            "files": ["*.jsx", "*.js"]
        }
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "react/react-in-jsx-scope": 0
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
